% Profession Experience
\newcommand{\Experience}[6]{
% input: start_date, end_date, title, city, company, description_list
    \adjustbox{valign=t}{
        \begin{minipage}{1.1 in}
            \begin{center}
            {\footnotesize \bfseries #2 \\ from \\ #1}
                \vspace*{0.04 in}
            \end{center}
        \end{minipage}
    }
    \VertLine
    \adjustbox{valign=t}{
        \begin{minipage}{3.7 in}
        {\normalsize \bfseries #3}
            \hfill
            {\footnotesize\faMapMarker  ~ #4}
            \newline
            \small
            {\emph{#5}}
            \setlist[itemize]{
                wide=0 pt,
                label=\color{titleBackColor}\textbullet,
                noitemsep,
                topsep=1 pt,
                leftmargin=*
            }
            \footnotesize {#6}
        \end{minipage}
    }
}

