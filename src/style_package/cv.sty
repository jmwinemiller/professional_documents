% Professional Experience
\newcommand{\Experience}[6]{
% input: start_date, end_date, title, city, company, description_list,
    \adjustbox{valign=t}{
        \begin{minipage}{1.5 in}
            \begin{center}
            {\small \bfseries #2 \\ from \\ #1}
            \end{center}
        \end{minipage}
    }
    \adjustbox{valign=t}{
        \begin{minipage}{6.0 in}
        {\large \bfseries #3}
            \hfill
            {\small \faMapMarker ~ #4}
            \newline
            {\normalsize \emph{#5}}
            \setlist[itemize]{
                wide=0 pt,
                label=\color{titleBackColor}\textbullet,
                noitemsep,
                topsep=1 pt,
                leftmargin=*
            }
            \small {#6}
        \end{minipage}
    }
}

