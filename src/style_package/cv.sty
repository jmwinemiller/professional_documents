% Professional Summary
\newcommand{\Summary}[1]{
% input: summary_description
    \begin{minipage}{7.75 in}
        \normalsize {#1}
    \end{minipage}
}

% Education Sections
% Education with extra information
\newcommand{\EducationExtra}[7]{
% input: date, logo, degree, specialization, university, city, extra_information
    \adjustbox{valign=t}{
        \begin{minipage}{1.5 in}
            \begin{center}
            {\normalsize \bfseries #1} \\
                \vspace*{0.05 in}
                \includegraphics[width=0.75 in]{#2}
            \end{center}
        \end{minipage}
    }
    \VertLine
    \adjustbox{valign=t}{
        \begin{minipage}{6.0 in}
        {\normalsize \bfseries #3}
            \hfill
            {\small \faMapMarker ~ #6}
            \newline
            {\normalsize \bfseries #4}
            \newline
            {\normalsize \bfseries \emph{#5}}
            \newline
            {\normalsize \emph{#7}}
        \end{minipage}
    }
}

